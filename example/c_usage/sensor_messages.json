{
    "version": "1.0.0",
    "max_address": 255,
    "devices": {
        "device A": {
            "role": "server"
        },
        "device B": {
            "role": "client",
            "id": 1
        },
        "device C": {
            "role": "client",
            "id": 2
        },
        "device D": {
            "role": "client",
            "id": 3
        },
        "device E": {
            "role": "client",
            "id": 4
        }
    },
    "packets": {
        "ping": {
            "packet_id": 0,
            "msg_type": "uint8",
            "request_type": "pub",
            "target_client_id": -1,
            "array": false,
            "msg_desc": "Ping command for connectivity check"
        },
        "firmware_version": {
            "packet_id": 4,
            "msg_type": "char",
            "request_type": "sub",
            "target_client_id": -1,
            "array": true,
            "max_length": 32,
            "msg_desc": "Firmware version string"
        },
        "device_name": {
            "packet_id": 14,
            "msg_type": "char",
            "request_type": "sub",
            "target_client_id": -1,
            "array": true,
            "max_length": 64,
            "msg_desc": "Device name string"
        },
        "temperature": {
            "packet_id": 20,
            "msg_type": "float32",
            "request_type": "sub",
            "target_client_id": 2,
            "array": false,
            "endianess": "big",
            "msg_desc": "Single temperature reading in Celsius"
        },
        "multi_temperature": {
            "packet_id": 21,
            "msg_type": "float32",
            "request_type": "sub",
            "target_client_id": 3,
            "array": true,
            "endianess": "big",
            "max_length": 8,
            "msg_desc": "Multiple temperature readings from sensors"
        },
        "humidity": {
            "packet_id": 22,
            "msg_type": "uint8",
            "request_type": "sub",
            "target_client_id": 2,
            "array": false,
            "msg_desc": "Humidity reading in percentage (0-100)"
        },
        "sensor_data": {
            "packet_id": 30,
            "msg_type": "struct",
            "request_type": "sub",
            "target_client_id": 2,
            "fields": {
                "temperature": {
                    "msg_type": "float32",
                    "endianess": "big"
                },
                "humidity": {
                    "msg_type": "uint8"
                },
                "pressure": {
                    "msg_type": "uint32",
                    "endianess": "big"
                },
                "co2_level": {
                    "msg_type": "uint16",
                    "endianess": "big"
                },
                "room_b" : {
                    "msg_type": "struct",
                    "fields": {
                        "temperatures": {
                            "msg_type": "float32",
                            "endianess": "big",
                            "array": true,
                            "max_length": 5
                        },
                        "humidity": {
                            "msg_type": "uint8"
                        },
                        "pressure": {
                            "msg_type": "uint32",
                            "endianess": "big"
                        },
                        "co2_level": {
                            "msg_type": "uint16",
                            "endianess": "big"
                        }
                    },
                    "msg_desc": "Combined sensor data structure (room B)"
                } 
            },
            "msg_desc": "Combined sensor data structure"
        },
        "led_control": {
            "packet_id": 40,
            "msg_type": "struct",
            "request_type": "pub",
            "target_client_id": -1,
            "fields": {
                "led_id": {
                    "type": "uint8"
                },
                "red": {
                    "type": "bool"
                },
                "green": {
                    "type": "bool"
                },
                "blue": {
                    "type": "bool"
                },
                "brightness": {
                    "type": "uint8"
                }
            },
            "msg_desc": "RGB LED control message"
        },
        "motor_speeds": {
            "packet_id": 50,
            "msg_type": "int16",
            "request_type": "pub",
            "target_client_id": 3,
            "array": true,
            "endianess": "little",
            "max_length": 4,
            "msg_desc": "Motor speed values (-32768 to 32767)"
        },
        "large_data": {
            "packet_id": 60,
            "msg_desc": "Large data",
            "msg_type": "struct",
            "request_type": "pub",
            "target_client_id": 4,
            "fields": {
                "segment": {
                    "msg_type": "uint8"
                },
                "data": {
                    "msg_type": "uint16",
                    "array": true,
                    "max_length": 108
                }
            }
        }
    }
}
